# ==============================
# CORE APP SETTINGS
# ==============================
ENVIRONMENT=production
APP_URL=http://localhost:3000
FRONTEND_URL=https://your-frontend-url.vercel.app

# ==============================
# DATABASE (POSTGRESQL)
# ==============================
DATABASE_URL=postgresql://username:password@host:port/database

# ==============================
# JWT CONFIG (SINGLE SOURCE OF TRUTH)
# ==============================
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================
# STRIPE CONFIG
# ==============================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs for Plans
STRIPE_STARTER_PRICE_ID=price_starter_id
STRIPE_CREATOR_PRICE_ID=price_creator_id
STRIPE_PRO_PRICE_ID=price_pro_id

# Stripe Price IDs for Credit Packs (Optional)
STRIPE_CREDIT_PACK_30_PRICE_ID=price_30_credits
STRIPE_CREDIT_PACK_100_PRICE_ID=price_100_credits
STRIPE_CREDIT_PACK_300_PRICE_ID=price_300_credits
STRIPE_CREDIT_PACK_1000_PRICE_ID=price_1000_credits

# ==============================
# CORS
# ==============================
CORS_ORIGINS=*
